{
  "meta": {
    "kitName": "Evergreen Interface Kit",
    "version": "1.0",
    "description": "An interaction-focused, fully accessible design system for Shopify apps. It blends the reliability of Polaris with an innovative aesthetic and a 'WOW' effect.",
    "author": "Your App Name"
  },
  "color": {
    "comment": "A semantic color palette, WCAG 2.1 AA compliant. Built on the base -> semantic principle.",
    "base": {
      "green": {
        "100": "#ECFDF5",
        "500": "#10B981",
        "600": "#059669",
        "700": "#047857"
      },
      "gray": {
        "50": "#F9FAFB",
        "100": "#F3F4F6",
        "200": "#E5E7EB",
        "400": "#9CA3AF",
        "600": "#4B5563",
        "800": "#1F2937",
        "900": "#111827"
      },
      "red": {
        "100": "#FEE2E2",
        "500": "#EF4444",
        "600": "#DC2626"
      },
      "yellow": {
        "100": "#FEF3C7",
        "500": "#F59E0B"
      },
      "white": "#FFFFFF",
      "black": "#000000"
    },
    "text": {
      "primary": "{color.base.gray.800}",
      "secondary": "{color.base.gray.600}",
      "placeholder": "{color.base.gray.400}",
      "on-action": "{color.base.white}",
      "interactive": "{color.base.green.600}",
      "critical": "{color.base.red.600}"
    },
    "surface": {
      "comment": "Backgrounds for the app and its components.",
      "app-background": "{color.base.gray.50}",
      "primary": "{color.base.white}",
      "subdued": "{color.base.gray.100}",
      "interactive-subtle": "{color.base.green.100}",
      "success": "{color.base.green.100}",
      "critical": "{color.base.red.100}",
      "warning": "{color.base.yellow.100}"
    },
    "border": {
      "divider": "{color.base.gray.200}",
      "interactive": "{color.base.green.500}",
      "critical": "{color.base.red.500}"
    },
    "interactive": {
      "comment": "The primary color for clickable elements. Engineered for the best experience.",
      "action-primary-default": "{color.base.green.500}",
      "action-primary-hover": "{color.base.green.600}",
      "action-primary-pressed": "{color.base.green.700}",
      "action-destructive-default": "{color.base.red.500}",
      "action-destructive-hover": "{color.base.red.600}"
    },
    "decorative": {
      "comment": "A 'WOW' gradient for subtle use on dashboards or hero cards.",
      "accent-gradient": "linear-gradient(120deg, {color.base.green.500} 0%, #06B6D4 100%)"
    },
    "state-layer": {
      "comment": "Semi-transparent overlays for elegant hover/pressed states, replacing abrupt color shifts.",
      "hover": "rgba(0, 0, 0, 0.04)",
      "pressed": "rgba(0, 0, 0, 0.08)",
      "focus-ring": "rgba(16, 185, 129, 0.5)"
    }
  },
  "typography": {
    "font-family": {
      "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'San Francisco', 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif"
    },
    "font-weight": {
      "regular": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "font-size": {
      "xs": "0.75rem",
      "comment": "12px",
      "sm": "0.875rem",
      "comment": "14px",
      "md": "1rem",
      "comment": "16px",
      "lg": "1.25rem",
      "comment": "20px",
      "xl": "1.75rem",
      "comment": "28px"
    }
  },
  "spacing": {
    "comment": "A scale based on an 8px base unit for perfect harmony with Shopify.",
    "base-unit": "0.5rem",
    "comment": "8px",
    "xs": "0.25rem",
    "comment": "4px",
    "sm": "0.5rem",
    "comment": "8px",
    "md": "1rem",
    "comment": "16px",
    "lg": "1.5rem",
    "comment": "24px",
    "xl": "2rem",
    "comment": "32px",
    "2xl": "3rem",
    "comment": "48px"
  },
  "sizing": {
    "input-height": "40px"
  },
  "border": {
    "radius": {
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "full": "9999px"
    },
    "width": {
      "default": "1px",
      "focus": "2px"
    }
  },
  "shadow": {
    "comment": "Interactive shadows. They lift the element towards the user on hover.",
    "resting": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "lifted": "0px 10px 20px -5px rgba(17, 24, 39, 0.1), 0 4px 6px -4px rgba(17, 24, 39, 0.1)",
    "overlay": "0px 20px 40px -10px rgba(17, 24, 39, 0.2)"
  },
  "animation": {
    "comment": "Animations that add 'life' to the interface. The 'expressive' curve is key to the 'WOW' effect.",
    "duration": {
      "quick": "150ms",
      "default": "250ms"
    },
    "easing": {
      "standard": "cubic-bezier(0.4, 0, 0.2, 1)",
      "expressive": "cubic-bezier(0.34, 1.56, 0.64, 1)"
    },
    "transition": {
      "all-default": "all 250ms cubic-bezier(0.4, 0, 0.2, 1)",
      "transform-shadow": "transform 250ms cubic-bezier(0.4, 0, 0.2, 1), box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1)"
    }
  }
}